@model WebStore.Domain.ViewModels.OrderViewModel


<form asp-action="Checkout">
    <div class="row">
        <div class="col-sm-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">                
                <input type="hidden" asp-for="Name" value="@User.Identity.Name" class="form-control" placeholder="Имя" />
                
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="sr-only"></label>
                <input asp-for="Phone" class="form-control" placeholder="Телефон" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="sr-only"></label>
                <input asp-for="Address" class="form-control" placeholder="Адрес" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>
        <div class="col-sm-6">
            @{
                ViewData.TryGetValue("TotalPrice", out var total_price);
                decimal price = total_price is decimal ? (decimal)total_price : 0;
            }

            @if (price > 0)
            {
                <div class="total_area">
                    <ul>
                        <li>Налог: 0</li>
                        <li>Доставка: 0</li>
                        <li>Итого; <span>@price.ToString("C")</span></li>
                    </ul>
                </div>

                <button type="submit" class="btn btn-info">Оформить</button>
            }
        </div>
    </div>
</form>

