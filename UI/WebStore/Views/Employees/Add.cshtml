@using WebStore.Domain.Employees
@model EmployeeViewModel
@{ 
    ViewData["Title"] = $"Добавление информации о новом сотруднике";
}

<div class="container">

    <div class="row">
        <h2 class="title text-center">Добавление информации о новом сотруднике</h2>
    </div>

    <div class="row">        
        <div class="col-xs-4">
            <form asp-action="Add" asp-controller="Employees" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" value="0"/>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surename" class="control-label"></label>
                    <input asp-for="Surename" class="form-control" />
                    <span asp-validation-for="Surename" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                @*<div class="form-group">
                    <label asp-for="Profession" class="control-label"></label>
                    <input asp-for="Profession" class="form-control" />
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>*@

                <div class="form-group">
                    <label asp-for="ProfessionId" class="control-label"></label>
                    <select asp-for="ProfessionId" asp-items="ViewBag.Professions"></select>
                    @*<span asp-validation-for="Profession" class="text-danger"></span>*@
                </div>

                <div class="form-group">
                    <input type="submit" value="Добавить данные" class="btn btn-success" />
                    <a asp-action="EmployeesList" class="btn btn-info">К списку</a>
                </div>
            </form>
        </div>
        <div class="col-xs-8"></div>
    </div>
    <div class="row">        
        <hr />
    </div>
</div>


